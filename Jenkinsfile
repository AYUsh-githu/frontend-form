pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                echo 'Cloning the repository...'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the app...'
            }
        }

        stage('Run') {
            steps {
                echo 'Running the app...'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing the app...'
            }
        }
    }
}
